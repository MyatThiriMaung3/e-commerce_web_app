# MongoDB Connection URI (for development)
ORDER_MONGO_URI=mongodb://localhost:27017/order_service_dev

# Service Port
ORDER_SERVICE_PORT=5003

# JWT Secret (must match the one used by Auth Service)
JWT_SECRET=your_jwt_secret_key_here

# URLs for other Microservices
AUTH_SERVICE_URL=http://localhost:5001/api/auth
PRODUCT_SERVICE_URL=http://localhost:5002/api/products
# NOTIFICATION_SERVICE_URL=http://localhost:5004/api/notifications # Removed as order-service uses RabbitMQ for notifications

# RabbitMQ URL
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# Frontend URL (for constructing links in emails)
FRONTEND_URL=http://localhost:3000

# API Client Timeout (milliseconds)
API_TIMEOUT=5000

# Order Calculation Defaults
# Percentage, e.g., 8.0 for 8%
TAX_RATE_PERCENT=8.0 
# Default shipping fee, e.g., 5.00 for $5, 0 for free shipping
SHIPPING_FEE=0.00 
# Rate at which points are earned, e.g., 0.10 for 10% of eligible order value earned as points
LOYALTY_POINTS_EARN_RATE=0.10 
# Monetary value of 1 loyalty point during redemption, e.g., 0.01 if 1 point = $0.01
LOYALTY_POINT_VALUE=0.01 

# --- Mock Service Flags ---
# Set to true to use mock implementations in apiClient.js for development/testing
# Set to false to attempt real HTTP calls to actual service endpoints
USE_MOCK_PRODUCT_SERVICE=true
USE_MOCK_AUTH_SERVICE=true

# Test Database URI (used via .env.test)
# TEST_MONGO_URI=mongodb://localhost:27017/order_service_test