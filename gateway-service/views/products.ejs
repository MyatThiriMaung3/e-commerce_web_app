<body class="bg-gray-50">
  <%- include('./partials/header') %>

  <main class="container mx-auto px-4 py-8">

    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Sidebar Filters -->
      <div class="lg:w-1/4">
        <div class="bg-white rounded-lg shadow-md p-6 sticky top-4">
          <h2 class="font-bold text-xl mb-4 text-gray-800">Filters</h2>
          
          <!-- Search -->
          <div class="mb-6">
            <label for="search" class="block text-gray-700 mb-2">Search Products</label>
            <div class="relative">
              <input type="text" id="search" placeholder="Search..." class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
              <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
          
          <!-- Categories -->
          <div class="mb-6">
            <h3 class="font-semibold text-gray-800 mb-3">Categories</h3>
            <div class="space-y-2">
              <div class="flex items-center">
                <input type="checkbox" id="cat-all" class="hidden filter-checkbox" checked>
                <label for="cat-all" class="flex items-center cursor-pointer">
                  <span class="w-5 h-5 inline-block mr-2 rounded border border-gray-300 flex-shrink-0 flex items-center justify-center">
                    <span class="w-3 h-3 inline-block bg-white rounded-sm"></span>
                  </span>
                  <span class="text-gray-700">All Categories</span>
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="cat-gpu" class="hidden filter-checkbox">
                <label for="cat-gpu" class="flex items-center cursor-pointer">
                  <span class="w-5 h-5 inline-block mr-2 rounded border border-gray-300 flex-shrink-0 flex items-center justify-center">
                    <span class="w-3 h-3 inline-block bg-white rounded-sm"></span>
                  </span>
                  <span class="text-gray-700">GPUs</span>
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="cat-cpu" class="hidden filter-checkbox">
                <label for="cat-cpu" class="flex items-center cursor-pointer">
                  <span class="w-5 h-5 inline-block mr-2 rounded border border-gray-300 flex-shrink-0 flex items-center justify-center">
                    <span class="w-3 h-3 inline-block bg-white rounded-sm"></span>
                  </span>
                  <span class="text-gray-700">CPUs</span>
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="cat-monitor" class="hidden filter-checkbox">
                <label for="cat-monitor" class="flex items-center cursor-pointer">
                  <span class="w-5 h-5 inline-block mr-2 rounded border border-gray-300 flex-shrink-0 flex items-center justify-center">
                    <span class="w-3 h-3 inline-block bg-white rounded-sm"></span>
                  </span>
                  <span class="text-gray-700">Monitors</span>
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="cat-storage" class="hidden filter-checkbox">
                <label for="cat-storage" class="flex items-center cursor-pointer">
                  <span class="w-5 h-5 inline-block mr-2 rounded border border-gray-300 flex-shrink-0 flex items-center justify-center">
                    <span class="w-3 h-3 inline-block bg-white rounded-sm"></span>
                  </span>
                  <span class="text-gray-700">Keyboards</span>
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="cat-storage" class="hidden filter-checkbox">
                <label for="cat-storage" class="flex items-center cursor-pointer">
                  <span class="w-5 h-5 inline-block mr-2 rounded border border-gray-300 flex-shrink-0 flex items-center justify-center">
                    <span class="w-3 h-3 inline-block bg-white rounded-sm"></span>
                  </span>
                  <span class="text-gray-700">Storage</span>
                </label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="cat-peripherals" class="hidden filter-checkbox">
                <label for="cat-peripherals" class="flex items-center cursor-pointer">
