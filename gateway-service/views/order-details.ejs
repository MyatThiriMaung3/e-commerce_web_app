<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <div class="container mx-auto px-4 py-8 max-w-5xl">
        <div class="container mx-auto">

            <h1 class="text-2xl font-medium text-red-500 mb-6">Cart Information</h1>
    
            <div class="bg-white shadow-md rounded-md p-6">
                <!-- Cart Table -->
                <table class="w-full border-collapse">
                <thead>
                    <tr class="border-b border-gray-200">
                    <th class="text-left py-4 font-medium text-gray-700 w-2/5">Product</th>
                    <th class="text-left py-4 font-medium text-gray-700 w-1/5">Price</th>
                    <th class="text-left py-4 font-medium text-gray-700 w-1/5">Quantity</th>
                    <th class="text-right py-4 font-medium text-gray-700 w-1/5">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Product 1 -->
                    <tr class="border-b border-gray-200">
                    <td class="py-6">
                        <div class="flex items-center">
                        <div class="mr-2 relative">
                            <img src="https://www.batna24.com/img2/1000/333357_161415.webp" alt="LCD Monitor" class="w-20 h-16 object-cover">
                        </div>
                        <span class="ml-4 text-gray-800">LCD Monitor</span>
                        </div>
                    </td>
                    <td class="py-6 text-gray-800">650,000 VND</td>
                    <td class="py-6">
                        <div class="flex items-center">
                        <input type="text" value="01" class="quantity-input text-center border-0 focus:outline-none" />
                        </div>
                    </td>
                    <td class="py-6 text-right text-gray-800 font-medium">650,000 VND</td>
                    </tr>
                    <!-- Product 2 -->
                    <tr class="border-b border-gray-200">
                    <td class="py-6">
                        <div class="flex items-center">
                        <div class="mr-2 relative">
                            <img src="https://images.unsplash.com/photo-1591488320449-011701bb6704" alt="HI Gamepad" class="w-20 h-16 object-cover">
                        </div>
                        <span class="ml-4 text-gray-800">HI Gamepad</span>
                        </div>
                    </td>
                    <td class="py-6 text-gray-800">550,000 VND</td>
                    <td class="py-6">
                        <div class="flex items-center">
                            <input type="text" value="02" class="quantity-input text-center border-0 focus:outline-none" />
                        </div>
                    </td>
                    <td class="py-6 text-right text-gray-800 font-medium">1,100,000 VND</td>
                    </tr>
                </tbody>
                </table>
        
                <!-- Buttons -->
                <!-- <div class="flex justify-between mt-8">
                <a href="#" class="px-8 py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">Return To Shop</a>
                <a href="#" class="px-8 py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">Update Cart</a>
                </div> -->
        
                <!-- Coupon and Totals -->
                <div class="mt-10 lg:flex justify-between items-center">
                <!-- Coupon Form -->
                <div class="lg:w-1/2 mb-6 lg:mb-0 flex flex-col space-y-10">
                    <div class="flex">
                        <input type="text" placeholder="Coupon Code" class="border border-gray-300 rounded-l-md px-4 py-3 w-full lg:w-64 focus:outline-none focus:ring-1 focus:ring-red-400">
                        <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-3 rounded-r-md transition">Apply Coupon</button>
                    </div>

                    <div class="flex">
                        <p class="border border-gray-300 rounded-l-md px-4 py-3 w-full lg:w-64 focus:outline-none focus:ring-1 focus:ring-red-400">Your Total Points : 300</p>
                        <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-3 rounded-r-md transition">Apply Loyalty Points</button>
                    </div>
                </div>
        
                <!-- Cart Total -->
                <div class="lg:w-1/2">
                    <div class="border border-gray-200 rounded-md p-6">
                    <h3 class="text-lg font-medium mb-4">Cart Total</h3>
                    <div class="border-b border-gray-200 pb-4 mb-4">
                        <div class="flex justify-between mb-2">
                            <span>Subtotal:</span>
                            <span class="font-medium">1,750,000 VND</span>
                        </div>
                        
                        <div class="flex justify-between mb-2">
                            <span>Tax (8%):</span>
                            <span class="font-medium">150,000 VND</span>
                        </div>

                        <div class="flex justify-between text-red-500 mb-2">
                            <span>Coupon:</span>
                            <span class="font-medium">-100,000 VND</span>
                        </div>

                        <div class="flex justify-between text-red-500 mb-2">
                            <span>Loyalty Points:</span>
                            <span class="font-medium">-50,000 VND</span>
                        </div>

                        <div class="flex justify-between mb-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                    </div>
                    <div class="flex justify-between mb-6">
                        <span>Total:</span>
                        <span class="font-medium">1,750,000 VND</span>
                    </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
      </div>

    <div class="container mx-auto px-4 py-8 max-w-5xl">
    
        <!-- Profile Information -->
        <div class="mb-12">
            <h1 class="text-2xl font-medium text-red-500 mb-6">Shipping Information</h1>
            
            <div id="address-form" class="bg-white border border-gray-200 rounded-md p-6 mb-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-gray-700 mb-2">Full Name</label>
                    <input type="text" placeholder="Full Name" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Email</label>
                    <input type="text" placeholder="Email" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Phone Number</label>
                    <input type="text" placeholder="Phone Number" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" required>
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Country</label>
                    <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">Vietnam</p>
                </div>
                <div class="md:col-span-2">
                    <label class="block text-gray-700 mb-2">Address</label>
                    <input type="text" placeholder="Street Address" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">City</label>
                    <input type="text" placeholder="City" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">State/Province</label>
                    <input type="text" placeholder="State/Province" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">ZIP/Postal Code</label>
                    <input type="text" placeholder="ZIP/Postal Code" class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div class="md:col-span-2">
                    <label class="flex items-center">
                    <input type="checkbox" id="show-saved-addresses" class="form-checkbox h-5 w-5 text-red-500">
                    <span class="ml-2 text-gray-700">Choose from saved addresses</span>
                    </label>
                </div>
                </div>
                <div class="flex justify-end space-x-3 mt-6">
                <button onclick="window.location.href='cart'" id="cancel-address-btn" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100 transition">back</button>
                <button onclick="window.location.href='order-summary'" id="save-address-btn" class="px-6 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition">Proceed to checkout</button>
                </div>
            </div>
        
            <!-- Shipping Address Management -->
            <div id="saved-addresses-section" class="hidden">
                <h2 class="text-xl font-medium text-gray-700 mb-4 mt-12 border-b pb-2">Shipping Addresses</h2>
            
                <!-- Default Address -->
                <div class="border border-gray-200 rounded-md p-4 mb-4 relative">
                    <span class="absolute top-4 right-4 bg-red-500 text-white text-xs px-2 py-1 rounded-md">Default</span>
                    <h3 class="font-medium">Home Address</h3>
                    <p class="text-gray-600">123 Main Street</p>
                    <p class="text-gray-600">Kingston, 5236</p>
                    <p class="text-gray-600">United States</p>
                    
                    <div class="absolute bottom-4 right-4">
                        <a href="#" class="px-8 py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">Choose this address</a>

                    </div>
                </div>



                <!-- Additional Addresses -->
                <div class="border border-gray-200 rounded-md p-4 mb-4 relative">
                    <h3 class="font-medium">Work Address</h3>
                    <p class="text-gray-600">456 Business Ave</p>
                    <p class="text-gray-600">Kingston, 5236</p>
                    <p class="text-gray-600">United States</p>
                    
                    <div class="absolute bottom-4 right-4 flex space-x-2">
                        <a href="#" class="px-8 py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">Choose this address</a>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>

    <script src="/js/script.js"></script>
  </body>
</html>