<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/head') %>

<body>

  <%- include('./partials/header') %>

  <div class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">

      <div class="bg-white shadow-md rounded-md p-6">
        <!-- Cart Table -->
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-4 font-medium text-gray-700 w-2/5">Product</th>
              <th class="text-left py-4 font-medium text-gray-700 w-1/5">Price</th>
              <th class="text-left py-4 font-medium text-gray-700 w-1/5">Quantity</th>
              <th class="text-right py-4 font-medium text-gray-700 w-1/5">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <!-- Product 1 -->
            <tr class="border-b border-gray-200">
              <td class="py-6">
                <div class="flex items-center">
                  <div class="mr-2 relative">
                    <button class="remove-button absolute -top-2 -left-2">×</button>
                    <img src="https://www.batna24.com/img2/1000/333357_161415.webp" alt="LCD Monitor" class="w-20 h-16 object-cover">
                  </div>
                  <span class="ml-4 text-gray-800">LCD Monitor</span>
                </div>
              </td>
              <td class="py-6 text-gray-800">$650</td>
              <td class="py-6">
                <div class="flex items-center">
                  <div class="border border-gray-300 rounded flex">
                    <button class="quantity-button">−</button>
                    <input type="text" value="01" class="quantity-input text-center border-0 focus:outline-none" />
                    <button class="quantity-button">+</button>
                  </div>
                </div>
              </td>
              <td class="py-6 text-right text-gray-800 font-medium">$650</td>
            </tr>
            <!-- Product 2 -->
            <tr class="border-b border-gray-200">
              <td class="py-6">
                <div class="flex items-center">
                  <div class="mr-2 relative">
                    <button class="remove-button absolute -top-2 -left-2">×</button>
                    <img src="https://images.unsplash.com/photo-1591488320449-011701bb6704" alt="HI Gamepad" class="w-20 h-16 object-cover">
                  </div>
                  <span class="ml-4 text-gray-800">HI Gamepad</span>
                </div>
              </td>
              <td class="py-6 text-gray-800">$550</td>
              <td class="py-6">
                <div class="flex items-center">
                  <div class="border border-gray-300 rounded flex">
                    <button class="quantity-button">−</button>
                    <input type="text" value="02" class="quantity-input text-center border-0 focus:outline-none" />
                    <button class="quantity-button">+</button>
                  </div>
                </div>
              </td>
              <td class="py-6 text-right text-gray-800 font-medium">$1100</td>
            </tr>
          </tbody>
        </table>
  
        <!-- Buttons -->
        <div class="flex justify-between mt-8">
          <a href="#" class="px-8 py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">Return To Shop</a>
          <a href="#" class="px-8 py-3 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition">Update Cart</a>
        </div>
  
        <!-- Coupon and Totals -->
        <div class="mt-10 lg:flex justify-between">
  
          <!-- Cart Total -->
          <div class="lg:w-1/3">
            <div class="border border-gray-200 rounded-md p-6">
              <h3 class="text-lg font-medium mb-4">Cart Total</h3>
              <div class="border-b border-gray-200 pb-4 mb-4">
                <div class="flex justify-between mb-2">
                  <span>Subtotal:</span>
                  <span class="font-medium">$1750</span>
                </div>
                <div class="flex justify-between">
                  <span>Shipping:</span>
                  <span>Free</span>
                </div>
              </div>
              <div class="flex justify-between mb-6">
                <span>Total:</span>
                <span class="font-medium">$1750</span>
              </div>
              <button class="w-full bg-red-500 hover:bg-red-600 text-white py-3 rounded-md transition">Proceed to checkout</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('./partials/footer') %>

  <script src="/js/script.js"></script>
  
</body>
</html>