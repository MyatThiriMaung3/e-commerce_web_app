<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>

    <div class="container mx-auto px-4 py-8 max-w-5xl">
        <div class="container mx-auto">    
            <div class="bg-white shadow-md rounded-md p-6">
                <!-- User Information -->
                <div class="mb-6">
                    <!-- Left-aligned heading -->
                    <h2 class="text-2xl font-semibold text-red-500 mb-6 text-left">Order Summary</h2>
                  
                    <!-- Right-aligned user info -->
                    <div class="p-4 space-y-2 text-right">
                      <div><span class="font-medium text-gray-600">Name:</span> <span id="customer-fullname">Myat Thiri Maung</span></div>
                      <div><span class="font-medium text-gray-600">Email:</span> <span id="customer-email">myat@example.com</span></div>
                      <div><span class="font-medium text-gray-600">Phone:</span> <span id="customer-ph">0901234567</span></div>
                      <div><span class="font-medium text-gray-600">Address:</span> <span id="customer-address">123 Le Loi Street, District 1, Ho Chi Minh City, Vietnam</span></div>
                    </div>
                  </div>

                <div class="border border-gray-200 rounded-md p-6">
                    <div class="border-b border-gray-200 pb-4 mb-4">
                        <div class="flex justify-between mb-2">
                            <span>LCD Monitor (1 × 650,000 VND)</span>
                            <span class="font-medium">650,000 VND</span>
                        </div>

                        <div class="flex justify-between mb-2">
                            <span>HI Gamepad (2 × 550,000 VND)</span>
                            <span class="font-medium">1,100,000 VND</span>
                        </div>
                        
                        <div class="flex justify-between mb-2">
                            <span>Tax (8%)</span>
                            <span class="font-medium">150,000 VND</span>
                        </div>

                        <div class="flex justify-between text-red-500 mb-2">
                            <span>Coupon</span>
                            <span class="font-medium">-100,000 VND</span>
                        </div>

                        <div class="flex justify-between text-red-500 mb-2">
                            <span>Loyalty Points</span>
                            <span class="font-medium">-50,000 VND</span>
                        </div>

                        <div class="flex justify-between mb-2">
                            <span>Shipping</span>
                            <span>Free</span>
                        </div>
                    </div>
                    <div class="flex justify-between mb-6">
                        <span>Total</span>
                        <span class="font-medium">1,750,000 VND</span>
                    </div>
                </div>
                <div class="flex justify-between mt-6">
                    <a href="order-details" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-100">back</a>
                    <button onclick="window.location.href='success'" class="px-6 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition">Confirm Order</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>

    <script src="/js/script.js"></script>
  </body>
</html>